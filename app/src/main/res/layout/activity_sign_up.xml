<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ABFF9800"
    tools:context=".SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80sp"
            android:fontFamily="sans-serif"
            android:text="New Account"
            android:textAlignment="center"
            android:textColor="#FBFBFB"
            android:textSize="34sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50sp"
            app:cardCornerRadius="30dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/txtfullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="20sp"
                android:text="Full name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtename"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="45sp"
                android:ems="20"
                android:background="#EDE1BE"
                android:hint="example@example.com"
                android:inputType="textEmailAddress"
                android:padding="8sp" />

            <TextView
                android:id="@+id/txtpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="90sp"
                android:text="Password"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtpass"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="115sp"
                android:ems="20"
                android:background="#EDE1BE"
                android:hint="*********"
                android:inputType="textEmailAddress"
                android:padding="8sp" />
            <TextView
                android:id="@+id/txtemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="155sp"
                android:text="Email"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtexamp"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="180sp"
                android:ems="20"
                android:background="#EDE1BE"
                android:hint="example@example.com"
                android:inputType="textEmailAddress"
                android:padding="8sp" />

            <TextView
                android:id="@+id/txtMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="220sp"
                android:text="Mobile Number"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtnumber"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="245sp"
                android:ems="20"
                android:background="#EDE1BE"
                android:hint="+ 123 456 789"
                android:inputType="textEmailAddress"
                android:padding="8sp" />

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="285sp"
                android:text="Mobile Number"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtbirth"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="310sp"
                android:ems="20"
                android:background="#EDE1BE"
                android:hint="+ 123 456 789"
                android:inputType="textEmailAddress"
                android:padding="8sp" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="70sp"
                android:backgroundTint="#F02626"
                android:text="Sign Up"
                android:textColor="#FFFEFE" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160sp"
                android:layout_marginTop="415sp"
                android:text="or sign up with" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100sp"
                android:layout_marginTop="440sp"
                android:layout_marginRight="100sp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/google" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/facebook" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/fingerprint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="480sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10sp"
                    android:text="Already have an Account"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/txtSignup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Log In"
                    android:textColor="#EF2121" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>